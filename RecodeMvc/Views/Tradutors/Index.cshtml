@model IEnumerable<RecodeMvc.Models.Tradutor>

@{
    ViewData["Title"] = "Index";
}
<div class="fundo mb-0">
    <div class="flex-column m-4 p-5">
       
    </div>
</div>


<div class="d-flex mr-2">
    @foreach (var item in Model)
    {
    <div class="card p-4 m-4 d-flex justify-content-center align-items-center" style="width: 18rem; background:#FF5E1F">
        <img src="/img/Ativo 2.svg" class="card-img-top  w-50" alt="Logomarca">
        <div style="color:#FFFDF1" class="card-body">

            <h5 class="card-title text-center">
                @Html.DisplayFor(modelItem => item.Nome)
            </h5>
            <h6 class="card-subtitle text-center">  @Html.DisplayFor(modelItem => item.Idade)</h6>
            <hr />
            <p class="card-text text-center">@Html.DisplayFor(modelItem => item.Email)</p>
            <p class="card-text text-center">@Html.DisplayFor(modelItem => item.Telefone)</p>
            <p class="card-text text-muted text-center"> @Html.DisplayFor(modelItem => item.NivelEspanhol)</p>
            <div class="d-flex justify-content-center align-items-center">
                <a style="background: #201f1c; color:#FFFDF1" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-send mr-2">Edit</a>
                <a style="background: #201f1c; color:#FFFDF1" asp-action="Details" asp-route-id="@item.Id" class="btn btn-send mr-2">Details</a>
                <a style="background: #201f1c; color:#FFFDF1" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-send mr-2">Delete</a>
            </div>
        </div>
    </div>}

    

</div>

<div>
    <br />
    <br />
    <br />
</div>

